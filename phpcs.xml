<?xml version="1.0"?>
<ruleset name="Custom Coding Standards">
    <description>PHPCS Custom Ruleset Example</description>

        <!-- Use PSR-12 coding standard -->
    <rule ref="PSR12"/>

    <!-- Show colored output -->
    <arg name="colors"/>

    <!-- Scan the 'app' directory -->
    <file>app</file>

    <!-- Exclude vendor folder -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

</ruleset>
